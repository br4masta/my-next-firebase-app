{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,  // Add this line to skip type checking of node_modules
    "types": ["node"],
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}